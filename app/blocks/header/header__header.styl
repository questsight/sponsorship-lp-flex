.header__header
  margin 30px 60px 100px
  position absolute
  top 0
  right 0
  left 0
  z-index 3
  display flex
  flex-direction row
  z-index 3
  @media only screen and (max-width: lg)
    margin 20px 60px 100px
  @media only screen and (max-width: md)
    margin 20px 15px 30px 10px
  @media only screen and (max-width: sm)
    position relative
    flex-wrap wrap