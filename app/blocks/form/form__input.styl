.form__input
  width 100%
  margin-bottom 30px
  padding 10px 5px
  border none
  border-bottom 1px solid rgba(255, 255, 255, 0.2)
  color baseColor
  background #030205;
  &:active
    border none
    border-bottom 1px solid rgba(255, 255, 255, 0.2)
  &:focus
    border none
    border-bottom 1px solid rgba(255, 255, 255, 0.2)
  &:hover
    border none
    border-bottom 1px solid rgba(255, 255, 255, 0.2)