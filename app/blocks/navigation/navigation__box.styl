.navigation__box
  position absolute
  top 200px
  display flex
  left calc(10vw + 90px)
  @media only screen and (max-width: lg)
    left 50px
  @media only screen and (max-width: md)
    top 100px
  @media only screen and (max-width: sm)
    top 150px
    flex-wrap wrap
  @media only screen and (max-width: xs)
    left 15px